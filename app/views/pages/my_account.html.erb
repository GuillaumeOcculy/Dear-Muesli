<h1 class='text-center'>Mon compte</h1>

<div class='container'>
	<div class="row">
	  <div class="col-md-6">
	  	<h2>Connexion</h2>
			
			<%= form_tag login_path do %>
				<%= label_tag :email, 'Adresse email' %><br>
				<%= email_field_tag :email, nil, class: 'form-control' %>
				<br>
				<%= label_tag :password %><br>
				<%= password_field_tag :password, nil, class: 'form-control' %>
				<br>
				<%= submit_tag 'Connexion', class: 'form-control' %>
				<%= link_to 'Mot de passe oubliÃ© ?', new_password_reset_path %>
				<br>
				<%= check_box_tag :remember_me %>
				<%= label_tag :remember_me, 'Se souvenir de moi' %>
			<% end %>
	  </div>

	  <div class="col-md-6">
	  	<h2>S'enregistrer</h2>

			<%= form_for @user, url: users_path do |f| %>
				<%= f.label :email %><br>
				<%= f.email_field :email, class: 'form-control' %>
				<br>
				<%= f.label :password %><br>
				<%= f.password_field :password, class: 'form-control' %>
				<br>
				<%= f.submit "S'enregistrer", class: 'form-control' %>
			<% end %>
	  </div>
	</div>
</div>

