<h2>Connexion</h2>

<%= form_tag login_path do %>
	<%= label_tag 'Adresse email' %>
	<%= email_field_tag :email %>
	<br>
	<%= label_tag 'Password' %>
	<%= password_field_tag :password %>
	<br>
	<%= check_box_tag :remember_me %>
	<%= label_tag 'Se souvenir de moi' %>
	<br>
	<%= submit_tag 'Connexion' %>
<% end %>

