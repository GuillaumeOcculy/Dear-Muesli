<div class='container'>
  <h1 class='text-center'>Panier</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">Produit</th>
        <th scope="col">Prix</th>
        <th scope="col">Quantite</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      <% current_order.order_items.each do |item| %>
        <tr>
          <td><%= link_to 'x', cart_product_path(current_order, item.product), method: :delete %></td>
          <td><%= image_tag item.product.recipes.first.picture.url(:thumb) %></td>
          <td><%= link_to item.product.name, product_path(item.product) %></td>
          <td><%= item.unit_price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.total_price %></td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>Livraison TNT: 6.2</td>
        <td>TOTAL: <%= current_order.order_items.sum(:total_price) + 6.2 %></td>  
      </tr>
    </tbody>
  </table>  
</div>