<h1 class='text-center'>Adresses</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%=  %></h2>
    <%= form_for @address, url: user_addresses_path(@user) do |f| %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.label :first_name, 'Prenom' %>
          <%= f.text_field :first_name, value: @user&.first_name, class: 'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :last_name, 'Nom' %>
          <%= f.text_field :last_name, value: @user&.last_name, class: 'form-control' %>
        </div>
      </div>

      <%= f.hidden_field :category, value: 'delivery' if params[:delivery] %>

      <%= f.label :entreprise_name, 'Nom de l\'entreprise' %>
      <%= f.text_field :entreprise_name, class: 'form-control' %>

      <%= f.label :country, 'Pays' %>
      <%= f.text_field :country, class: 'form-control', disabled: true %>

      <%= f.label :street_name, 'Adresse' %>
      <%= f.text_field :street_name, class: 'form-control' %><br>
      <%= f.text_field :street_name_2, class: 'form-control' %>
      <%= f.label :city, 'Ville' %>
      <%= f.text_field :city, class: 'form-control' %>
      <%= f.label :postal_code, 'Code postal' %>
      <%= f.phone_field :postal_code, class: 'form-control' %>

      <div class="row">
        <div class="col-xs-6">
          <%= f.label :phone, 'Telephone' %>
          <%= f.phone_field :phone, class: 'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= f.label :email, 'Adresse email' %>
          <%= f.email_field :email, value: @user.email, class: 'form-control' %>
        </div>
      </div>
      <br>
      <%= f.submit 'Sauvegarder l\Adresse', class: 'form-control' %>
    <% end %>
  </div>
</div>