<div class='container'>
  <h1 class='text-center'>Product#new</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @product, url: admin_products_path, html: { multipart: true } do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %><br>

        <%= f.label :price %>
        <%= f.number_field :price, min: 0, class: 'form-control' %><br>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %><br>

        <%= f.fields_for :recipezations, @product.recipezations.build do |recipezation_form| %>
          <%= render 'recipezation_fields', f: recipezation_form %>
        <% end %>

        <div class='links'>
          <%= link_to_add_association 'Add recipe', f, :recipezations %>
        </div>

        <%= f.submit 'Ajouter', class: 'form-control' %>
      <% end %>
    </div>
  </div>
</div>
