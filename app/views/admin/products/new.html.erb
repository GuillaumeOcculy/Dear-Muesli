<div class='container'>
	<h1 class='text-center'>Product#new</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	  	<%= form_for @product, url: admin_products_path, html: { multipart: true } do |f| %>
	  		<%= f.label :name %>
	  		<%= f.text_field :name, class: 'form-control' %><br>

	  		<%= f.label :price %>
	  		<%= f.number_field :price, min: 0, class: 'form-control' %><br>

	  		<%= f.label :description %>
	  		<%= f.text_area :description, class: 'form-control' %><br>

	  			<table class="table">
					  <thead>
					    <tr>
					      <th scope="col"></th>
					      <th scope="col">Name</th>
					      <th scope="col">Image</th>
					    </tr>
					  </thead>
					  <tbody>
					  	<%= f.collection_check_boxes :recipe_ids, Recipe.all, :id, :name do |recipe_form| %>
						  	<tr>
						      <th><%= recipe_form.check_box  %></th>
						      <td><%= recipe_form.label %></td>
						      <td><%= image_tag recipe_form.object.picture.url(:thumb) %></td>
						    </tr>
					  	<% end %>
					  </tbody>
					</table>

	  		<%= f.submit 'Ajouter', class: 'form-control' %>
	  	<% end %>
	  </div>
	</div>
</div>
