<div class='container'>
	<h1 class='text-center'>Edit <%= @recipe.name %></h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	  	<%= form_for @recipe, url: admin_recipe_path(@recipe), method: :put, html: { multipart: true } do |f| %>
	  		<%= f.label :name %>
	  		<%= f.text_field :name, class: 'form-control' %><br>

	  		<%= f.label :quantity %>
	  		<%= f.number_field :quantity, min: 0, class: 'form-control' %><br>

	  		<%= f.label :picture %>
	  		<%= f.file_field :picture, class: 'form-control' %><br>

	  		<%= f.submit 'Modifier', class: 'form-control' %>
	  	<% end %>
	  </div>
	</div>
</div>
